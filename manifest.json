{
    "manifest_version": 2,
    "name": "pdga-stats-chrome-extension",
    "version": "0.0.0",
    "description": "Extension to add functionality to the PDGA website",
    "icons": {
        "16": "16x16.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://www.pdga.com/player/*"],
            "exclude_matches": [
                "*://www.pdga.com/player/*/details",
                "*://www.pdga.com/player/*/history",
                "*://www.pdga.com/player/*/wins"],
            "js": ["in-content.js"]
        }
    ],
    "content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
    "offline_enabled": true,
    "permissions": ["tabs", "<all_urls>", "activeTab"]
}
